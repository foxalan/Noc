<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/index_medal"
        android:id="@+id/tv_title"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="您已击败全国20.2%的玩家"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        
        android:layout_marginTop="20dp"
        android:text="答案正确"
        android:layout_below="@id/tv_title"
        android:gravity="center"
        android:textSize="35sp"
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view_bg"
        android:background="@drawable/bg_circle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv_dialog_title"
        android:layout_width="100dp"
        android:layout_height="100dp" />
   
    <ImageView
        android:background="@drawable/game_level_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:text="1"
        android:layout_below="@id/tv_dialog_title"
        android:id="@+id/iv_dialog_current_position"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:layout_below="@id/tv_dialog_title"
        android:id="@+id/tv_dialog_current_position"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    
    <TextView
        android:id="@+id/tv_current_song"
        android:text="同桌的你"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/view_bg"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ib_game_next"
        android:background="@drawable/bg_pass"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_current_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ib_game_share"
        android:background="@drawable/bg_pass_share"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ib_game_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>