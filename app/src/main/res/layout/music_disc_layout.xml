<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="18sp"
            android:layout_gravity="center"
            android:text="歌名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="220dp"
        android:layout_height="220dp">
        <ImageView
            android:id="@+id/iv_game_center"
            android:layout_gravity="center"
            android:src="@drawable/game_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/game_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_game_round"
            android:layout_gravity="center"
            android:src="@drawable/game_disc_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ib_game_start"
            android:layout_gravity="center"
            android:background="@drawable/index_set_bg"
            android:layout_width="130dp"
            android:layout_height="130dp" />

        <ImageView
            android:id="@+id/iv_game_pin"
            android:src="@drawable/game_pin"
            android:layout_gravity="right"
            android:layout_width="60dp"
            android:layout_height="140dp" />

    </FrameLayout>


</LinearLayout>